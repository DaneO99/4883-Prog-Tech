//Solution
class Solution {
public:
    void inorder(TreeNode* root, vector<int>&keys){
        if(root == NULL) return;
        inorder(root->left, keys);
        keys.push_back(root->val);
        inorder(root->right,keys);
    }
    bool findTarget(TreeNode* root, int k) {
        vector<int>keys;
        inorder(root, keys);
        
        int left = 0;
        int right = keys.size()- 1;

        while(left < right)
        {
            int sum = keys[left] + keys[right];

            if(sum == k){
                return true;
            }else if(sum < k){
                left++;
            }else{
                right--;
            }
        }
        return false;
    }
};
